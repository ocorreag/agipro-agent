# CAUSA Agent Configuration
# Copy this file to .env and fill in your API keys

# OpenAI API Key (required for content generation and image creation)
OPENAI_API_KEY=your_openai_api_key_here

# Google Sheets Configuration (optional - for activities calendar)
GOOGLE_SHEETS_ID=your_google_sheets_id_here
GOOGLE_SHEETS_NAME=Hoja 1

# Content Generation Settings
POSTS_PER_DAY=3
DAYS_TO_GENERATE=2
CLEANUP_MONTHS=4

# System Settings (usually don't need to change)
STREAMLIT_SERVER_PORT=8501
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false